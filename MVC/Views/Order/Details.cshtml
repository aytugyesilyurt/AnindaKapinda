@model Entities.Concrete.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sipariş detayı</h1>

<hr />
<div>
    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                <li class="list-group-item"><a asp-controller="Profile" asp-action="Profile" asp-route-id="">Profil</a></li>
                <li class="list-group-item"><a asp-action="MyAdresses" asp-route-id="">Adreslerim</a></li>
                <li class="list-group-item"><a asp-controller="CreditCard" asp-action="List" asp-route-id="">Kayıtlı Kartlarım</a></li>
                <li class="list-group-item"><a asp-controller="Order" asp-action="List" asp-route-id="">Geçmiş Siparişlerim</a></li>
            </ul>
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DeliveryAdress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DeliveryAdress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DeliverDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DeliverDate)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-info" asp-action="List">Geri dön</a>
        </div>
    </div>
</div>